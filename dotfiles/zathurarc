# Settings
set window-width 1200
set window-height 850
set guioptions ''
set statusbar-v-padding 0
set statusbar-h-padding 20
set window-title-basename true
set incremental-search false
set synctex true
set selection-notification false
set selection-clipboard clipboard
set sandbox none
set vertical-center true

# Define normal mappings
map R reload
map r rotate
map H zoom in
map L zoom out
map U scroll half-down
map D scroll half-up
map p print

# Define mappings for fullscreen
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] d toggle_page_mode 2
map [fullscreen] <Tab> toggle_index
# map [fullscreen] j scroll half-down
# map [fullscreen] k scroll half-up
map [fullscreen] <C-o> jumplist backward
map [fullscreen] <C-i> jumplist forward

# Colors
set inputbar-bg "#fdf6e3"
set inputbar-fg "#657b83"
set statusbar-bg "#fdf6e3"
set statusbar-fg "#657b83"
set completion-bg "#fdf6e3"
set completion-fg "#657b83"
set index-fg "#657b83"
set index-bg "#fdf6e3"
set index-active-fg "#657b83"
set highlight-active-color "#008800"
set highlight-color "#007777"
set highlight-transparency 0.15
set completion-highlight-fg "#fdf6e3"
set completion-highlight-bg "#657b83"
set notification-bg "#fdf6e3"
set notification-fg "#657b83"
set notification-error-bg "#fdf6e3"
set notification-error-fg "#657b83"
set notification-warning-bg "#fdf6e3"
set notification-warning-fg "#657b83"
